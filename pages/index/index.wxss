/**index.wxss**/
.container {
  background: #FFFF00;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100vh;
  width: 100%;
  margin: 0;
  padding: 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.title {
  font-size: 72px;
  font-weight: lighter;
  
}


.buttons {
  height: 20vh;
  width: 75%;
}

.button {
  background: transparent;
  border: 1px solid black;
  border-radius: 0;
  margin: 75rpx 0;
  text-transform: lowercase;
}

.button-hover {
  background: black;
  color: white;
}

.button button {
  border: 0;
  border-radius: 0;
}