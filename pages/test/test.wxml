<import src="/template/calendar/index.wxml"/>

<view class="container">
  <view class="title">
    <text>What's your plan?</text>
  </view>
  
  <view class="input">
  <form bindsubmit="formSubmit" bindreset="formReset">

    <view class="image-upload">
        <image class="uploadButton" src="../../images/uploa.png" ontap="uploadImage"/>
        <text>Upload Image</text>
        <image wx:if="{{photo_url === true}}" src="../../images/loading.gif" />
        <image wx:elif="{{photo_url === false}}" src="" />
        <image wx:elif="{{photo_url}}" src="../../images/green-check.svg" />
      </view>
  
    <view class="groupTitle">
      <text>Group Name*</text>
        <input name="name" placeholder-class="input-placeholder" placeholder="" class="groupname"/>
    </view>


<view class="section">
  <view class="section__title">Date*</view>
  <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange" class="dateTime">
    <view class="picker">
    -{{date}}-
    </view>
  </picker>
</view>

    <view class="section">
  <view class="section__title">Time*</view>
  <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange" class="dateTime">
    <view class="picker">
    -{{time}}-
    </view>
  </picker>
</view>

    <view class="location-title">Location*</view>
    <view class='location-buttons'>
<view class='ownlocation'>
      <button class="own-location-button" bindtap="useOwnLocation"><image wx:if="{{owner_location}}" src="../../images/green-check.svg" /></button>
      <text>use your location</text>   
</view>

<view class='friendlocation'>  
      <button class="everyone-location-button" bindtap="useAllLocations"><image wx:if="{{owner_location === false}}" src="../../images/green-check.svg" /></button>
      <text>use everyone's location</text>
</view>
    
    </view>

    <view class="input-button">
      <button formType="submit" hover-class="button-hover" class="submitButton">SUBMIT</button>
    </view>
    </form>
  </view> 
</view>
