/* pages/stories/stories.wxss */

page{
background-color: #FBE251;
align-items: center;
}
.meal-card {
  height: 240rpx;
  width: 95vw;
  box-shadow:2px 2px 8px grey;
  background-size:cover !important;
  background-position:center;
  position:relative;
  display:flex;
  align-items:center;
  flex-direction:row;
  justify-content:space-around;
  margin:15px 10px;
  border-radius:5px;
}
.meal-image {
  height: 100%;
  width: 100%;
  background-size: cover;
  background-position: center;
  display: flex;
  justify-content: center;
}
.meal-title{
  display:flex;
  font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
  background-color: #FBE251;
  height:50px;
  color:black;
  font-size:30px;
  align-items:top;
  justify-content:center;
  background-size:cover;
  background-repeat: no-repeat;
}



.card {
height:30px;
width: 100%;
/* border:1px #1C1B1B solid; */
/* box-shadow:2px 2px 5px grey; */
background-position:center;
background-color:rgba(250,250,250,0.8);
position:relative;
display:flex;
align-items:center;
flex-direction:row;
justify-content:space-around;
padding: 10px;
margin-top: 45px;
/* margin:10px 10px; */
/* border-radius:5px; */
}


.user-avatar {
width:40px;
height:40px;
border-radius:50%;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, -100%, 0);
    transform: translate3d(0, -100%, 0);
    visibility:visible;
  }

  to {
    opacity: 1;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
    visibility:visible;
  }
}


.card-text{
  display:flex;
  flex-direction:column;
  font-size: 15px;
  color:#1C1B1B;
  width:220px;
}

.card-title {
  text-transform: uppercase;
}

.card-date {
    font-size: 12px;
    font-weight: lighter;
    text-decoration: none;
}

.PlanButton{
  display:flex;
  justify-content:center;
}

.btn{
  width:200px;
  background-color:#1C1B1B;
  color:white;
  margin:10px;

}

.desc {
  border: 2px solid rgb(240,240,240);
  margin-bottom:15px;
  padding: 5px;
  font-size: 14px;
}
