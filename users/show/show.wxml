<!--users/show/show.wxml-->

  <view class="meal-title"> 
    <text>Your Meals</text>
  </view>

  <block wx:for="{{meals}}" wx:for-item="meal">
    <view bindtap="yourMeals" data-meal_id="{{meal.id}}" class="card">
      <view class="card-avatar">
        <image class="user-avatar" src="../../pages/images/用户.png"/> 
      </view>
      <view class="card-text">
        <text class="card-title">{{meal.name}}</text>
        <text class ="card-date">{{meal.meal_date}}</text>
      </view>
    </view>
  </block>
  <button bindtap="toNewMeal" class="btn">organise your meal</button>
