<!--users/show/show.wxml-->

  <view class="meal-title"> 
    <text>Your Upcoming Meals</text>
  </view>

  <block wx:key="index" wx:for="{{meals}}" wx:for-item="meal" wx:for-index="index">
    <view bindtap="yourMeals" data-meal_id="{{meal.id}}" class='card' style="animation-delay: {{(index+1)*0.1}}s">
      <view class="card-text">
        <view class="card-title">Meal: <text style="font-weight:bold;">{{meal.name}}</text></view>
        <view class ="card-date">Date: <text style="font-weight:bold;">{{meal.meal_date}}</text></view>
      </view>
        <image class="user-avatar" src="{{user_avatars[meal.created_by]}}"/> 
    </view>
  </block>
  <view class="PlanButton">
    <button bindtap="toNewMeal" class="btn">Plan a new meal!</button>
  </view>
