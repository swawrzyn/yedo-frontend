/* groups/show/show.wxss */
.container {
  width: 95vw;
  height: 65vh;
  margin: 0 auto;
  padding: 5px 0px;
  font-family: sans-serif;
  box-shadow: 1px 4px 7px #c1c1c1;
}
.group-card {
  width: 100%;
  height: 50vh;
  margin: 0px;
  align-content: center;
  justify-content: center;
}
.group-name {
  font-size: 17px;
  padding: 5px;
  display: flex;
  align-content: center;
  justify-content: center;
  font-weight: bolder;
}
.group-image {
  position: relative;
  height: 200px;
  width: 100%;
  margin: 0;
  padding: 0;
  background-size: cover;
  background-position: center;
  transition: all 1s ease;
}
.footer {
  width: 70%;
  padding: 0px 10px;
  border-left: 1px solid #FFFF00;
}
.restaurant-name {
  font-size: 14px;
  font-weight: bold;
}
.restaurant-address {
  font-size: 11px;
}
.rating {
  color: #FFFF00;
