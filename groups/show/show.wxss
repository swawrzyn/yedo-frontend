.container {
  width: 95vw;
  margin: 10px auto;
  padding: 5px 0px;
  font-family: sans-serif;
  box-shadow: 1px 4px 7px #c1c1c1;
}

.group-card {
  width: 100%;
  margin: 0px;
  align-content: center;
  justify-content: center;
}

.meal-name {
  text-align:center;
}

.details {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-info {
  text-align: center;
  width: 95vw;
}

.card-recommend {
  text-align: center;
  width: 95vw;
  margin: 10px auto;
  padding: 10px 0;
  font-family: sans-serif;
  box-shadow: 1px 4px 7px #c1c1c1;
}

.recommend {
  text-align: center;
  width: 95vw;
  margin: 10px auto;
  padding: 10px 0;
  font-family: sans-serif;
  box-shadow: 1px 4px 7px #c1c1c1;
}
.address {
  font-size: 12px;
}
.info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 20px;
}

.group-name {
  font-size: 17px;
  padding: 5px;
  display: flex;
  align-content: center;
  justify-content: center;
  font-weight: bolder;
}
.group-image {
  position: relative;
  height: 200px;
  width: 100%;
  margin: 0;
  padding: 0;
  background-size: cover;
  background-position: center;
  transition: all 1s ease;
}
.footer {
  width: 70%;
  padding: 0px 10px;
  border-left: 1px solid #FFFF00;
}
.restaurant-name {
  font-size: 14px;
  font-weight: bold;
}
.restaurant-address {
  font-size: 11px;
}
