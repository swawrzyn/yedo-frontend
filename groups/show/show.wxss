}
.group-list {
padding: 10px 25px;
}
.user {
height: 35px;
padding: 6px 0px;
display: flex;
text-align: center;
border-bottom: 0.25px solid #c1c1c1;
}
.user-avatar {
  width: 35px;
  height: 35px;
  border-radius: 50%;
  background-size: cover;
  background-position: center;
}
.user-name {
  text-align: center;
  display: flex;
  padding: 5px 10px;
}
.response {
  width: 30px;
  height: 30px;
  position: absolute;
  right: 25px;
  display: flex;
}
