page {
  background: #fbe251;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.container {
  display:flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin: 0;
  padding: 0;
}

.top-image {
  height: 500rpx;
  width: 100vw;
  background-size: cover;
  background-position: center;
}

.home-button {
  height: 72rpx;
  width: 72rpx;
  z-index: 10;
  position: absolute;
  top: 25rpx;
  left: 25rpx;
}

.page-content {
  height: 100%;
  width: 100vw;
}

.group-card {
  width: 95vw;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 0 auto;
  margin-top: -200rpx;
  background: rgba(250,250,250,0.9);
  box-shadow: 0px 0px 10px 1px rgba(0, 0, 0, 0.2);
  border-radius: 8px;
}

.top {
  display: flex;
  height: 200rpx;
  width: 100%;
}


.group-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  width: 80%;
  height: 100%;
  margin-left: 25rpx;
}

.group-left .group-name {
  padding-top: 10rpx;
  font-size: 52rpx;
}

.group-left .group-date {
  font-size: 36rpx;
  font-style: italic;
  padding-bottom: 25rpx;
}

.group-right {
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background: transparent;
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
}

.group-right .group-share {
  height: 50%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 0.5px solid #e1e1e1 !important;
  transition: all 0.2s ease;
  border-top-right-radius: 8px;
  background: transparent;
  flex-direction: column;
}

button {
border: 0 !important;
background: none !important;  
}

button::after {
  border: none;
}

.group-right .group-members {
  height: 50%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: all 0.2s ease;
  border-bottom-right-radius: 8px;
}

.group-right image {
 width: 36rpx;
 height: 36rpx;
}

.group-right-hover {
  background: #d5d5d5;
  transition: all 0.2s ease;
}

.button-selected {
  background: green;
}

.user-line {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 25rpx;
}

.user-image {
  height: 16px;
  border-radius: 50%;
  margin-right: 25rpx;
}

.user-name {
  font-size: 16px;
}

.small-text {
  margin-top: 5rpx;
  font-size: 12px;
}



.rec-title {
  width: 95vw;
  height: 175rpx;
  color: white;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-around;
  text-align: center;
  background-size: cover;
  background-position: center;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

.rec-title .rec-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.rec-title .rec-left .title {
    font-size: 40px;
    margin: 0;
    padding: 0;
}

.rec-title .rec-left .recommend {
  font-size: 16px;
  margin: 0;
  padding: 0;
}


.restaurant-cards {
  width: 95vw;
  height: 100%;
  margin: 0 auto;
}

.restaurant-card {
  height: 150rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(250,250,250,0.9);
  border-radius: 5px;
  margin: 25rpx auto;
}

.restaurant-details {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 25rpx;
}

.restaurant-details .name {
  font-size: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.restaurant-details .address {
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;

}

.card-buttons {
  display: flex;
  height: 100%;
  justify-content: flex-end;
  align-items: center;
}

.card-buttons image {
  height: 50%;
  width: 50%;
}

.card-buttons .telephone {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100%;
  border-right: 0.5px solid #e1e1e1;
}

.disabled {
  opacity: 0.5;
}

.card-buttons .map {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100%;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}

ec-canvas {
  width: 200rpx;
  height: 200rpx;
}