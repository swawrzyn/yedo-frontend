<!--groups/show/show.wxml-->
<view class='container'>
  <view class="group-card">
    <view class="card">
      <view class="meal-name">
        <text>{{meals.name}}</text>
      </view>
      <view class="details">
        <view class="card-image">
          <image src="{{_userprofile.avatar}}" class='organisor-avatar'/>
        </view>
        <view class="card-info">
          <view>Organised by: {{_userprofile.nickname}}</view>
          <view>{{meals.meal_date}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
    
