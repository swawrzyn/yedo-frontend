@import '/template/calendar/index.wxss';


.page{
  letter-spacing:-3px;
}

.container {
  background: #FBE251;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
  width: 101vw;
  margin: 0;
  padding: 0;
  font-family: Arial, Helvetica, sans-serif;
  overflow:hidden;
}

.uploadButton{
  height:60px;
  width:60px;
  margin:5px;
  margin-bottom:12px;
}


.image-upload{
  display:flex;
  flex-direction: column;
  align-items:center;
  font-size:15px;
 margin-top:30px;
margin-bottom:40px;
}

.successImage{
  height:60px;
  width:60px;
  margin:5px;
}

.groupTitle{
  font-size:15px;
  margin:20px 0px;
}

.title{
  margin: 20px 0px;
}

.title text {
  font-size: 30px;
  margin-top: 200rpx 0;
}

.input {
  margin-top:-5px;
  width: 75%;
}

.input input {
  height: 90rpx;
  padding: 0 25rpx;
  background: rgba(250,250,250,0.8);
  color: black;
  margin: 25rpx 0; 
  border-radius:5px;
  font-size:20px;
  text-align:center;
  margin-top:5px;

}

.input-placeholder {
  color: black;
  font-family: Arial, Helvetica, sans-serif;
  opacity: 0.5; 
  align-text:center;
}

.section{
  font-size:15px;
  margin:20px 0px;
}

.dateTime{
  height: 90rpx;
  padding: 0 25rpx;
  background: rgba(250,250,250,0.8);
  color: black;
  margin: 25rpx 0; 
  border-radius:5px;
  font-size:20px;
  text-align:center;
  margin-top:5px;
}

.picker{
  color:grey;
  display: block;
  /* padding-top: 12px; */
  height: 100%;
  padding: 10px;
}

.district-select {
  height: 80rpx;
  padding: 0 25rpx;
   background: rgba(250,250,250,0.9);
  color: black;
  box-shadow: 1px 4px 7px #c1c1c1;
   font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  margin: 25rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
   border-radius:5px;
}


.location-buttons {
  display:flex;
  justify-content: space-around;
  align-items: center;
  font-size:12px;
  margin-top:15px;
margin-bottom:20px;

}

.location-buttons .own-location-button {
  position: relative;
  background-color: rgba(250,250,250,0.9);
  width:40px;
  height:40px;
}


.own-location-button image {
  height: 50rpx;
  width: 50rpx;
  position: absolute;

}

.location-buttons .everyone-location-button {
  position: relative;
  background-color: rgba(250,250,250,0.9);
  width:40px;
  height:40px;
}

.everyone-location-button image {
  height: 50rpx;
  width: 50rpx;
  position: absolute;
}

.location-buttons button {
  width: 100%;
}


button {
 background: rgba(250,250,250,0.8);
  color: black;
  border-radius: 4px;
  font-size:15px;
  word-wrap: normal;
  margin-bottom:10px;
  display:flex;
justify-content:center;
align-items:center;

}

.upload-button {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}


.upload-button image {
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  right: 25rpx;
}

.button-hover {
  background: black;
  color: white;
}/* pages/test/test.wxss */

.submitButton{
  background-color:black;
  color:rgba(250,250,250,0.9);
}

.input-button{
  margin:40px 50px;
}

.location-title{
  font-size:15px;
}