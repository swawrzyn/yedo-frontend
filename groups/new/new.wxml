<import src="/template/calendar/index.wxml"/>

<view class="container">
  <view class="title">
    <text>what's your plan?</text>
  </view>

  <view class="input">
    <input name="name" placeholder="group name?" />
    <picker bindchange="bindPickerChange" value="1" range="{{region}}">
    <view class="picker">
      <view class="district-select">
        <text wx:if="{{district}}">{{district}}</text>
        <text wx:if="{{!district}}">choose a district</text>
      </view>
    </view>
  </picker>
    <view class="calendar-wrap">
      <template is="calendar" data="{{...calendar}}" />
    </view>
    <view class="input-button">
      <button formType="submit" hover-class="button-hover">submit</button>
    </view>
  </view>
</view>
