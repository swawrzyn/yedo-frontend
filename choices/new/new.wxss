.button-box .button{
  width: 300rpx;
  height: 100rpx;
  border: 1rpx solid black;
  background: whitesmoke;
  color: black;
  box-shadow: 1px 1px 1px 1.5px grey;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
}

.button .green-check {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 10rpx;
  top: 25rpx;
}

.button-box .button.bold {
  background: #FBE251;
  font-weight: bold;
}

.button-box .button:active {
 top: 2px;
 -webkit-box-shadow: 0.5px 0.5px 0.5px 1px grey ;
 box-shadow: 0.5px 0.5px 0.5px 0.5px grey ;
}